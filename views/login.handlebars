<div class="login-page">

  <header>
    <nav class="homepage-nav navbar navbar-light bg-light justify-content-between">
      <a href="/"><h1 class="logo">explore<span class="yellow-text">Venue</span></h1></a>
      <form class="form-inline">
        {{#if isLoggedIn}}
        <button id="logout" class="btn btn-outline-warning">Logout</button>
        {{else}}
        <button type="button" class="sign-up-btn btn btn-link mr-2 btn-lg" onclick="goToSignUpPage()">Sign Up</button>
        <button type="button" class="btn btn-outline-warning btn-lg" onclick="goToLoginPage()">Login</button>
        {{/if}}
      </form>
    </nav>
  </header>

  <div class="login-container container-fluid">
    <form class="login-form p-4" action="">
      <div class="form-group">
        <label for="emailAddress">Email address:</label>
        <input type="email" class="form-control form-control-lg" placeholder="Enter email" name="emailAddress" id="emailAddress">
      </div>
      <div class="form-group">
        <label for="passwordInput">Password:</label>
        <input type="password" class="form-control form-control-lg" placeholder="Enter password" name="password" id="passwordInput">
      </div>
      <div class="form-group form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox"> Remember me
        </label>
      </div>
      <button type="submit" id="login" class="btn btn-warning btn-lg text-white">Login</button>
    </form>
  </div>
  <script src="assets/js/login.js"></script>
  <script src="assets/js/homepage.js"></script>
</div>